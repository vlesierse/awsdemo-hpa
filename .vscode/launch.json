  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch (webapi)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-webapi",
      "program": "${workspaceFolder}/src/webapi/bin/Debug/net5.0/webapi.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/webapi",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": "Launch (orderservice)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-orderservice",
      "program": "${workspaceFolder}/src/orderservice/bin/Debug/net5.0/orderservice.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/orderservice",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "Launch (producer)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-producer",
      "program": "${workspaceFolder}/src/producer/bin/Debug/net5.0/producer.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/producer",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    }
  ]
}